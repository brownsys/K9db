load("@rules_rust//rust:rust.bzl", "rust_binary", "rust_library")

rust_binary(
    name = "lobsters-harness",
    srcs = [
        "src/main.rs",
        "src/lib.rs"
    ],
    rustc_flags = [
        "-Clink-args=-lssl",
        "-Clink-args=-lcrypto",
        "-Clink-args=-rdynamic",
        "-Clink-args=-Wl,-export-dynamic",
